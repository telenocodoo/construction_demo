<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="paperformat_landscape" model="report.paperformat">
        <field name="name">Landscape format for pdf</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">3</field>
        <field name="margin_bottom">3</field>
        <field name="margin_left">6</field>
        <field name="margin_right">6</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">3</field>
        <field name="dpi">80</field>
    </record>
    <record id="tax_summary" model="ir.actions.report">
        <field name="name">Tax Summary</field>
        <field name="model">report.telenoc_tax_report.tax_summary_report</field>
        <field name="report_name">telenoc_tax_report.tax_summary_report</field>
        <field name="report_type">qweb-pdf</field>
        <field name="paperformat_id" ref="paperformat_landscape"/>
    </record>

</odoo>
